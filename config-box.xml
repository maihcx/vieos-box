<Preferences>
	<Preference
		type="switch"
		key="vieos_home_minus"
		title="Màn hình -1"
		summary="Cho phép bật/tắt màn hình -1"
		settingType="system"
		defaultValue="false"
		ToastShow="enabled: Đã bật|disable: Đã tắt"
		packageName="com.android.launcher"/>

	<Preference
		type="list"
		key="test_list"
		title="Chế độ hiển thị"
		summary="Chọn giao diện mong muốn"
		settingType="global"
		defaultValue="2"
		entries="Sáng|Tối|Tự động"
		entryValues="1|2|3"/>

	<Preference
		type="seekbar"
		key="test_brightness"
		title="Độ sáng"
		summary="Chỉnh độ sáng màn hình"
		settingType="secure"
		defaultValue="50"
		min="0"
		max="100"/>
</Preferences>
